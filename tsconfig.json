{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    // "rootDir": "./src",
    "outDir": "dist",
    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "esnext",
    "target": "es2016",
    "lib": ["esnext","dom"],
    "sourceMap": true,
    "moduleResolution": "node",
    // Recommended Options
    "strict": false,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true, // 解析JSON
    "baseUrl": ".",
    // 路径映射
    "paths": {
      "@zw/*": ["packages/*/src"]
    }
  }
}
